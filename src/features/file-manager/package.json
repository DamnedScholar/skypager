{
  "name": "@skypager/features-file-manager",
  "version": "0.4.1",
  "description": "an observable state machine for a projects files",
  "author": "Jon Soeder <jon@chicago.com>",
  "main": "lib/index.js",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "babel -d lib src --source-maps --comments",
    "postbuild": "skypager hash-build",
    "docs:api": "skypager generate-api-docs",
    "prepare": "yarn docs:api && yarn build",
    "test": "cross-env DISABLE_SKYPAGER_FILE_MANAGER=true skypager test --timeout 30000"
  },
  "skypager": {
    "webpack": {
      "build": "webpack.config.js"
    },
    "category": "features",
    "providesScripts": false,
    "apiDocs": [
      "src/features/file-manager",
      "src/features/package-manager",
      "src/features/module-manager"
    ]
  },
  "dependencies": {
    "@skypager/helpers-client": "^0.2.7",
    "@skypager/helpers-server": "^0.2.7",
    "cacache": "11.3.2",
    "fs-extra-promise": "^1.0.1",
    "gaze": "^1.1.3",
    "md5-file": "3.1.1",
    "memory-fs": "^0.4.1",
    "skywalker": "^0.3.2"
  },
  "gitHead": "ae542b32070401f678270edbfc9ee6f44811c282",
  "keywords": [],
  "contributors": []
}
